<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0턴"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf = "@id/box_1"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="@id/box_1"
        />

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="되돌아가기"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf = "@id/box_9"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@id/box_9"
        android:background="@color/material_dynamic_primary70"
        />

    <TextView
        android:id="@+id/box_5"

        android:layout_width="70dp"
        android:layout_height="70dp"

        android:background="@android:color/darker_gray"

        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/box_4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/box_5"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/darker_gray"

        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/box_6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/box_5"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/box_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/box_5"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray"

        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/box_3"
        android:layout_width="70dp"
        android:layout_height="70dp"

        app:layout_constraintStart_toEndOf="@+id/box_5"
        android:layout_marginLeft="5dp"

        app:layout_constraintBottom_toTopOf="@id/box_5"
        android:layout_marginBottom="5dp"

        android:background="@android:color/darker_gray"

        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/box_1"
        android:layout_width="70dp"
        android:layout_height="70dp"

        app:layout_constraintEnd_toStartOf="@+id/box_5"
        android:layout_marginRight="5dp"

        app:layout_constraintBottom_toTopOf="@id/box_5"
        android:layout_marginBottom="5dp"

        android:background="@android:color/darker_gray"

        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/box_7"
        android:layout_width="70dp"
        android:layout_height="70dp"

        app:layout_constraintEnd_toStartOf="@+id/box_5"
        android:layout_marginRight="5dp"

        app:layout_constraintTop_toBottomOf="@id/box_5"
        android:layout_marginTop="5dp"

        android:background="@android:color/darker_gray"

        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/box_9"
        android:layout_width="70dp"
        android:layout_height="70dp"

        app:layout_constraintStart_toEndOf="@+id/box_5"
        android:layout_marginLeft="5dp"

        app:layout_constraintTop_toBottomOf="@id/box_5"
        android:layout_marginTop="5dp"

        android:background="@android:color/darker_gray"

        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/box_8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box_5"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"

        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>